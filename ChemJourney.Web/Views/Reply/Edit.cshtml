@model PostReplyFormViewModel
@{
    ViewBag.Title = "Edit Post";
}

<link rel="stylesheet" href="~/css/ForumCss/forumCreate.css" asp-append-version="true" />
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Content" class="form-label-add-edit"><b>Content:</b></label>
                <textarea asp-for="@Model.Content" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn mb-2 w-100 p-3 fw-bold custom-button custom-color" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}