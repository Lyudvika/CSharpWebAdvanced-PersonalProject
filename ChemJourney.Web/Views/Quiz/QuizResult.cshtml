@model QuizScoreViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quiz Results</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            padding: 20px;
        }
        .quiz-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            max-width: 600px;
            margin: 0 auto;
        }
        h2, h3 {
            color: #333;
        }
        p {
            color: #666;
            margin-bottom: 10px;
        }
        .score {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="quiz-container">
        <h2>Quiz Results</h2>
        <div>
            <h3>@Model.Title</h3>
            <p>@Model.Description</p>
            <p class="score">Your Score: @Model.Score</p>
        </div>
    </div>

    <input type="hidden" id="refreshed" value="no">
    <script type="text/javascript">

        onload=function(){
            var e=document.getElementById("refreshed");
            if(e.value=="no")e.value="yes";
            else{e.value="no";location.reload();}
        }

    </script>

</body>
</html>